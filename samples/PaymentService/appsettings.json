{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "ResilientMicroservices": "Debug"
    }
  },
  "AllowedHosts": "*",
  "ResilientMicroservices": {
    "CircuitBreaker": {
      "FailureThreshold": 5,
      "OpenTimeout": "00:01:00",
      "SamplingDuration": 10,
      "MinimumThroughput": 3
    },
    "RetryPolicy": {
      "MaxRetryAttempts": 3,
      "BaseDelay": "00:00:01",
      "UseExponentialBackoff": true,
      "BackoffMultiplier": 2.0,
      "UseJitter": true,
      "MaxJitter": "00:00:00.500"
    },
    "Timeout": {
      "DefaultTimeout": "00:00:30"
    },
    "Tracing": {
      "ServiceName": "PaymentService",
      "JaegerEndpoint": "http://localhost:14268/api/traces",
      "SamplingRatio": 1.0,
      "EnableConsoleExporter": false,
      "EnableJaegerExporter": true
    },
    "RabbitMQ": {
      "HostName": "localhost",
      "Port": 5672,
      "UserName": "guest",
      "Password": "guest",
      "VirtualHost": "/",
      "ConnectionName": "PaymentService"
    },
    "Metrics": {
      "EnablePrometheusExporter": true,
      "EnableConsoleExporter": false,
      "SystemMetricsInterval": "00:00:30"
    }
  }
}
